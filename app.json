{
    "name": "Dashtag",
    "description": "Displays tweets and instagrams of a certain hashtag",
    "website": "https://github.com/anirudh-eka/hashtag_displayer",
    "repository": "https://github.com/anirudh-eka/hashtag_displayer",
    "success_url": "/",
    "keywords": [
        "Social",
        "twitter",
        "instagram"
    ],    
    "scripts": {
        "postdeploy": "bundle exec rake db:migrate"
    },

    "env": {
        "HASHTAG": {
            "required": 'true' 
            },
        "CENSORED_WORDS": {
            "required": 'false' 
            },
        "TWITTER_BEARER_CREDENTIALS": {
            "required": 'false' 
            },
        "INSTAGRAM_CLIENT_ID": {
            "required": 'false' 
            }
    }
}